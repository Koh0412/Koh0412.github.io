{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./resources/js",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"]
}
